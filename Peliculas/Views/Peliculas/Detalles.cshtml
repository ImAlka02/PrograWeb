@model Peliculas.Models.ViewModel.DetallesPeliculaViewModel
@{
    Layout = "MainLayout";
}

<div id="principalVer">
    <div class="container">
        <img class="image1" src="~/images/banners/@(Model.Id)_b.jpg">
        <div class="overlay">
            <img class="image2" src="~/images/banners/@(Model.Id)_b.png">
        </div>
    </div>
    
    <div class="datosPelicula">
        <h1>@Model.Nombre</h1>
        <h2>
            @(Model.NombreOriginal) • @(Model.Fecha.ToString("dd MMM yyyy"))</h2>
            <p>
                @Model.Descripcion
            </p>


            <div class="personajes">
                <h2>Personajes</h2>
                @foreach (var p in Model.Personajes)
                {
                    <div>
                        <a>
                            <img src="~/images/personajes/@(p.Id).jpg" alt="@p.Nombre">
                        </a>
                        <div class="nombrePelicula">
                            <p>@p.Nombre</p>
                        </div>
                    </div>
                }     
            </div>
    </div>
</div>
